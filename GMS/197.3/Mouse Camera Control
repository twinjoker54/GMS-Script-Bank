//by Lapig
//Numpad+ to set camera to follow mouse Numpad- to disable

[ENABLE]
Alloc(Hook,123)
Label(Return)
Label(On)
Label(Off)
Label(Exit)

Hook:
pushad
cmp ebx,004E0000 //Numpad +
je On
cmp ebx,004A0000 //Numpad -
je Off
Exit:
popad
mov ecx,[03437A34]
jmp Return

//__thiscall CCameraMoveByCursor::OnOn(void)
//68 90 01 00 00 E8
On:
mov ecx,[0342AF44]
test ecx,ecx
je 0180392A
mov ecx,[ecx+00015B28]
push 00000400         //camera speed
call 00FC8950
jmp Exit

//__thiscall CCameraMoveByCursor::OnOff(void)
Off:
mov ecx,[0342AF44]
test ecx,ecx
je 01803947
mov ecx,[ecx+00015B28]
push 00
call 00FC89B0
jmp Exit

02771883:
jmp Hook
db 90
Return:

[DISABLE]

02771883: //8B 0D ? ? ? ? 85 C9 74 ? 83 C1 04 8B 01 5D FF 20
mov ecx,[03437A34]

dealloc(Hook)
